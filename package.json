  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "ng": "ng",
    "nest": "nest",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:client": "ng serve",
    "dev:server": "nest start server -w",
    "dev:libs": "tsc -b tsconfig.libs.json -w",
    "build": "npm run build:libs && concurrently \"npm:build:client\" \"npm:build:server\"",
    "build:client": "ng build",
    "build:server": "nest build server",
    "build:libs": "tsc -b tsconfig.libs.json",
    "test:client": "ng test",
    "test:server": "npm run test:server:unit & npm run test:server:e2e",
    "test:server:unit": "jest --config ./projects/server/jest.config.unit.js",
    "test:server:e2e": "jest --config ./projects/server/jest.config.e2e.js",
    "format": "prettier --write \"projects/**/*.{html,less,ts,json}\" \"*.{json,js,ts,md}\"",
    "lint": "eslint \"projects/**/*.ts\" --cache --fix"
  },
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/forms": "~13.1.0",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "common": "file:projects/common",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.1.4",
    "@angular/cli": "~13.1.4",
    "@angular/compiler-cli": "~13.1.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jasmine": "~3.10.0",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jasmine-core": "~3.10.0",
    "jest": "^27.2.5",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "prettier": "^2.5.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "~4.5.2"
  }
}
